<main>
  <section class="spotlight">
    <%spotlight = Work.spotlight%>
    <h2 class="spotlight_header">Media Spotlight: <%= link_to spotlight.title, work_path(spotlight.id),class:"spotlight_link"%> by <%= spotlight.created_by%></h2>
    <p class="spotlight_description"><%=spotlight.votes.length%> votes. <%= spotlight.description %></p>
  </section>

  <section class="top_ten_container">
    <section class="top">
      <h2 class="top_ten_header">Top Movies</h2>
      <% movies = Work.top_ten("movie")%>
      <ul class="list-group top_ten_list">
        <% movies.each do |movie|%>
        <li class="list-group-item">
          <h4>
            <%= link_to movie.title, work_path(movie.id)%>
            <small class="top_creator">by <%= movie.created_by%></small>  
          </h4>
          <p><%= movie.votes.length%> votes</p>
        </li>       
      <%end%>
    </section>

    <section class="top">
      <h2 class="top_ten_header">Top Books</h2>
      <% books = Work.top_ten("book")%>
      <ul class="list-group top_ten_list">
        <% books.each do |book|%>
        <li class="list-group-item">
          <h4>
            <%= link_to book.title, work_path(book.id)%>
            <small class="top_creator">by <%= book.created_by%></small>  
          </h4>
          <p><%= book.votes.length%> votes</p>
        </li> 
      <%end%>
    </section>

    <section class="top">
      <h2 class="top_ten_header">Top Albums</h2>
      <% albums = Work.top_ten("album")%>
      <ul class="list-group top_ten_list">
      <% albums.each do |album|%>
        <li class="list-group-item">
          <h4>
            <%= link_to album.title, work_path(album.id)%>
            <small class="top_creator">by <%= album.created_by%></small>  
          </h4>
          <p><%= album.votes.length%> votes</p>
        </li> 
      <%end%>
    </section>
  <section>
</main>

